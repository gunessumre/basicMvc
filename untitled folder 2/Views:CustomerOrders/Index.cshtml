@model YourProjectName.Models.CustomerOrderViewModel

<h1>Müşteri Bilgileri</h1>
<ul>
    <li><strong>ID:</strong> @Model.Customer.Id</li>
    <li><strong>Ad:</strong> @Model.Customer.FirstName</li>
    <li><strong>Soyad:</strong> @Model.Customer.LastName</li>
    <li><strong>Email:</strong> @Model.Customer.Email</li>
</ul>

<h2>Siparişler</h2>
<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>Sipariş ID</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Miktar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ProductName</td>
                <td>@order.Price</td>
                <td>@order.Quantity</td>
            </tr>
        }
    </tbody>
</table>